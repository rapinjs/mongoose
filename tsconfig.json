{
    "compilerOptions": {
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./lib",
        "baseUrl": "."
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}